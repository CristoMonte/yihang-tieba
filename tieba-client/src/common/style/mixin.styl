image-block($width)
  position relative
  width $width
  height 0
  padding-top 61.8033988%
  >:first-child
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  >:not(:first-child)
    display none

flex-center()
  display flex
  justify-content center
  align-content center
  align-items center
