ul.cells.a-floor-cell
  li.cell.floor-cell(
    ref="touchCell",
    v-for="post of posts",
    @click="$router.push(`/post-detail/${post.id}`)"
  )
    img.user-avatar.user-default-avatar(
      ref="imgErr",
      :src="post.lz.avatar"
    )
    div.post-cont
      div.user-info
        span.user-id {{post.lz.nickname}}
        span.user-public-time {{post.createDate}}
      h3.post-title.ellipsis {{post.title}}
      p.post-simple(
        v-text="post.cont"
      )
