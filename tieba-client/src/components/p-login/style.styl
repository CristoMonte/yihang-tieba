@import "../../common/style/mixin.styl"
@import "../../common/style/variables.styl"

// 定义 或 重载 变量


.p-login
  posf-full()
  z-index $p-login-z
  overflow hidden
  background-color #f4f4f4
  color #444
  .login-cont
    width 100%
    height 100%
    df-center()
    flex-flow column nowrap
    .login-bg
      flex-shrink 0
      width px(360)
      margin-bottom px(60)
    .login-box
      position relative
      margin-bottom px(30)
      .login-user
        flex-shrink 0
        font-size px(32)
        height px(74)
        width px(560)
        line-height px(74)
        border-radius px(6)
        box-sizing border-box
        padding 0 px(60) 0 px(20)
      .icon-confirm
        position absolute
        right px(20)
        top 50%
        transform translateY(-50%)
        font-size px(32)
        color #ccc
    .login-text
      flex-shrink 0
      font-size px(32)
      box-sizing border-box
      height px(74)
      width px(560)
      line-height px(74)
      border-radius px(6)
      padding 0 px(20)
      margin-bottom px(30)
    .login-submit
      flex-shrink 0
      font-size px(32)
      height px(72)
      color #fff
      background-color #38f
      border-radius px(4)
      padding 0 px(60)
      margin-top px(40)
      &.login-submit--touch
        background-color #6af
    .goto-login
      margin-top px(40)
      text-decoration underline
      font-size px(28)
