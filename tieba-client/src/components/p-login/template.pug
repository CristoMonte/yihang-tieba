transition(
  enter-active-class="animated fadeIn",
  leave-active-class="animated fadeOut"
)
  //- @click="closeShowStart",
  div.p-login
    div.login-cont
      img.login-bg(
        src="./start-ui-bg-1.png"
      )
      div.login-box(
        @keyup.enter.stop="submit"
      )
        input.login-user(
          type="text",
          @input.stop="checkUser",
          :placeholder="unp",
          v-model="username",
          :style="{color: userAccess ? '#3388ff' : '#777'}"
        )
        i.icon-confirm(
          :style="{color: userAccess ? '#3388ff' : '#ccc'}"
        )
      input.login-text(
        type="password",
        :placeholder="pwp",
        v-model="password",
      )
      button.login-submit(
        ref="loginSubmit",
        @click.stop="submit"
      ) 登录
      a.goto-login(
        @click.stop="$router.replace('/logup')"
      ) 我还没有账号，想注册一下
      a.goto-login(
        @click.stop="$router.replace('/root')"
      ) 先不登录，跳过吧
